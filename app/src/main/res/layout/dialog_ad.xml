<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:backgroundTint="?attr/colorDialog">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="10dp"
       android:backgroundTint="?attr/colorDialog"
       >
<!--
Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon"> www.flaticon.com</a>
-->
       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="30dp"
           android:src="@drawable/ic_heart"
           android:padding="18dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp"
           android:fontFamily="@font/open_sans"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:text="Hey, I'm a struggling engineer trying to meet both ends. You can support me by making a quick and small contribution today because no help is too small.\n Thank you."
           android:gravity="center"
           android:textSize="14sp"
           android:textColor="?attr/textcolor"/>

       <Button
           android:id="@+id/adDialogDonateButton"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:layout_marginStart="30dp"
           android:layout_marginEnd="30dp"
           android:layout_marginTop="20dp"
           android:text="@string/donate"
           android:background="@drawable/curvedcorners"
           android:textColor="@color/white"
           android:backgroundTint="@color/materialBlue"
           />

       <Button
           android:id="@+id/adDialogCancelButton"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:layout_marginStart="30dp"
           android:layout_marginEnd="30dp"
           android:layout_marginTop="10dp"
           android:text="Cancel"
           android:background="@drawable/curvedcorners"
           android:textColor="@color/white"
           android:backgroundTint="@color/materialRed500"
           android:layout_marginBottom="30dp"/>


   </LinearLayout>


</androidx.cardview.widget.CardView>